  stage: maintenance
  script:
    - docker-compose -f kwkhtmltopdf-traefik.docker-compose.yml down
    - docker-compose -f kwkhtmltopdf-traefik.docker-compose.yml up -d
  when: manual
  only:
    - "{{ odoo_version }}"
